    "typescript": "5.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/plugin-syntax-flow": "7.21.4",
    "@babel/plugin-transform-react-jsx": "7.21.0",
    "@codingnomad/eslint-config-cn": "0.1.14",
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
