{
  "name": "@codingnomad/ts-utilities",
  "version": "0.0.22",
  "description": "Contains all sorts of global helper functions and data objects",
  "repository": "github:codingnomad-com/ts-utilities",
  "author": "Manuel Bachl | Coding Nomad <manuel@coding-nomad.com> (https://coding-nomad.com)",
  "homepage": "https://coding-nomad.com",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "jsnext:main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint src/**/*.{ts,tsx} --fix",
    "test": "playwright test",
    "test:show-report": "npx playwright show-report",
    "test:chromium": "playwright test --project=chromium",
    "test:debug": "playwright test --debug",
    "test:codegen": "playwright codegen",
    "preflight": "yarn lint && yarn tsc && yarn test",
    "commit": "yarn preflight && git-cz",
    "commit:skip-preflight": "git-cz",
    "release": "standard-version",
    "release:tags": "git push --follow-tags origin main",
    "build": "rimraf dist && node esbuild.config.mjs && tsc --outDir dist",
    "prepublishOnly": "yarn preflight && yarn build && yarn release && yarn release:tags"
  },
  "dependencies": {
    "@types/node": "18.14.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "atob": "2.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@babel/core": "7.21.3",
    "@babel/plugin-syntax-flow": "7.18.6",
    "@babel/plugin-transform-react-jsx": "7.21.0",
    "@codingnomad/eslint-config-cn": "0.1.13",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@playwright/test": "1.30.0",
    "@types/atob": "2.1.2",
    "@typescript-eslint/parser": "5.53.0",
    "commitizen": "4.3.0",
    "concurrently": "7.6.0",
    "cross-spawn": "7.0.3",
    "esbuild": "0.17.11",
    "eslint": "8.34.0",
    "gh-pages": "5.0.0",
    "glob": "8.1.0",
    "inflected": "2.1.0",
    "prettier": "2.8.4",
    "prop-types": "15.8.1",
    "react-is": "18.2.0",
    "read-pkg-up": "9.1.0",
    "replace": "1.2.2",
    "rimraf": "4.1.2",
    "standard-version": "9.5.0",
    "ts-loader": "9.4.2",
    "which": "3.0.0",
    "yargs-parser": "21.1.1"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "library",
    "react",
    "typescript",
    "utilities"
  ]
}
